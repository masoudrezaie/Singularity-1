Bootstrap: docker
From: nvidia/cuda:9.0-cudnn7-runtime

%post
apt-get -y update
apt-get -y install python3-pip

pip3 install --upgrade pip
pip3 install tensorflow-gpu
pip3 install torch
pip3 install torchvision
pip3 install keras

apt-get -y update
apt-get -y install python3-pip net-tools
apt-get -y install graphviz libgraphviz-dev

pip3 install --upgrade pip
pip3 install jupyter
pip3 install numpy scipy matplotlib
pip3 install ipyparallel

ipcluster nbextension enable

%environment
XDG_RUNTIME_DIR=""
PATH=${PATH}:${LSF_BINDIR}

PATH=${PATH}:${LSF_BINDIR}:/cm/local/apps/cuda/libs/current/bin
LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/usr/local/cuda-9.0/lib64:/cm/local/apps/cuda-driver/libs/current/lib64
CUDA_PATH=/usr/local/cuda-9.0
CUDA_ROOT=/usr/local/cuda-9.0
